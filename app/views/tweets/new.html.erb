<%= stylesheet_link_tag 'new', media: "all" %>

<div class="post-container">
  <h1>ええ湯めぐり案内所</h1>
  <h3>新規投稿ページ</h3>

  <%= form_for @tweet do |f| %>

    

    <div class="field">
      <%= f.label :hot_springs, "温泉名" %><br>
      <%= f.text_field :hot_springs, size: 30 %>
    </div>

    <div class="field">
      <%= f.label :place, "場所" %><br>
      <%= f.text_field :place, size: 30 %>
    </div>

    <div class="field">
      <%= f.label :birth, "創業年" %><br>
      <%= f.text_field :birth %>
    </div>

    <div class="field">
      <%= f.label :explain, "説明" %><br>
      <%= f.text_area :explain, size: "30x3" %>
    </div>


    <div class="field">
      <%= f.label :image, "画像アップロード" %><br>
      <%= f.file_field :image %>
    </div>

    <br>
    <%= f.submit "投稿する" %>
  <% end %>

  <br>
  <%= link_to "一覧へ", tweets_list_path, class: "back-link" %>
</div>
