<%= stylesheet_link_tag 'new', media: "all" %>

<div class="post-container">
  <h1>Hidden_hot_springs</h1>
  <h3>新規投稿ページ</h3>

  <%= form_for @tweet do |f| %>

    <div class="form-group">
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
        <div class="form-check">
          <%= tag.label class: 'form-check-label' do %>
            <%= tag.check_box class: 'form-check-input' %>
            <%= tag.text %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :hot_springs, "温泉名" %><br>
      <%= f.text_field :hot_springs, size: 30 %>
    </div>

    <div class="field">
      <%= f.label :place, "場所" %><br>
      <%= f.text_field :place, size: 30 %>
    </div>

    <div class="field">
      <%= f.label :birth, "創業年" %><br>
      <%= f.text_field :birth %>
    </div>

    <div class="field">
      <%= f.label :explain, "説明" %><br>
      <%= f.text_area :explain, size: "30x3" %>
    </div>

    <div class="field">
      <%= f.label :picture, "画像URL" %><br>
      <%= f.text_field :picture, size: 30 %>
    </div>

    <div class="field">
      <%= f.label :image, "画像アップロード" %><br>
      <%= f.file_field :image %>
    </div>

    <br>
    <%= f.submit "投稿する" %>
  <% end %>

  <br>
  <%= link_to "一覧に戻る", tweets_path %>
</div>
