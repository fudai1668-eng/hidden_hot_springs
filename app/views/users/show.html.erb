<div class="mypage-container">

  <h1 class="site-title">全国温泉紹介サイト</h1>
  <p class="subtitle">あなたのコメント</p>

<div class="tweet-list">
  <% if @comments.any? %>
    <% @comments.each do |c| %>
      <div class="tweet-card">

        <p>
          <strong>温泉名：</strong>
          <%= link_to c.tweet.hot_springs, tweet_path(c.tweet) %>
        </p>

        <p>
          <strong>内容：</strong>
          <%= c.content %>
        </p>

        <p class="tweet-date">
          コメント日：<%= c.created_at.strftime("%Y/%m/%d") %>
        </p>

      </div>
    <% end %>
  <% else %>
    <p>まだコメントがありません。</p>
  <% end %>
</div>


  <hr>

  <h1 class="profile-title">Profile</h1>

<div class="profile-box">
  <p class="profile-name">名前：<%= @user.name %></p>
  <p class="profile-email">メールアドレス：<%= @user.email %></p>
  <p class="profile-text">プロフィール：<%= @user.profile %></p>

  <% if user_signed_in? && current_user.id == @user.id %>
    <%= link_to "編集する", edit_user_registration_path, class: "edit-btn" %>
  <% end %>

  <div class="button-area">
  <%= link_to "一覧へ", tweets_list_path, class: "back-link" %>
  <%= link_to "新規投稿へ", new_tweet_path, class: "back-link" %>
</div>


</div>
